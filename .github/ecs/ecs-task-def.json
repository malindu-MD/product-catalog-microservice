{
    "family": "product-catalog-task",
    "networkMode": "awsvpc",
    "containerDefinitions": [
      {
        "name": "product-catalog",
        "image": "dilshansoori/product-catalog:latest",
        "cpu": 0,
        "portMappings": [
          {
            "containerPort": 80,
            "hostPort": 80,
            "protocol": "tcp",
            "appProtocol": "http"
          }
        ],
        "essential": true,
        "environment": [
          {
            "name": "PORT",
            "value": "${PORT}"
          },
          {
            "name": "MONGO_URI",
            "value": "${MONGO_URI}"
          }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/product-catalog-task",
            "awslogs-create-group": "true",
            "awslogs-region": "eu-north-1",
            "awslogs-stream-prefix": "ecs"
          }
        }
      }
    ],
    "executionRoleArn": "arn:aws:iam::687007852609:role/ecsTaskExecutionRole",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "1024",
    "memory": "2048",
    "runtimePlatform": {
      "cpuArchitecture": "X86_64",
      "operatingSystemFamily": "LINUX"
    }
  }
  